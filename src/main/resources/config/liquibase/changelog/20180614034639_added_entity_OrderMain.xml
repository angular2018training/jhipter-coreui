            </column>

            <column name="send_date" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="weight" type="double">
                <constraints nullable="true" />
            </column>

            <column name="width" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="height" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="depth" type="integer">
